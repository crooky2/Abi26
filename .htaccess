# Enable clean URLs so /account loads account.php
# XAMPP/Apache: make sure mod_rewrite is enabled and AllowOverride is allowed for this directory.

Options -MultiViews
DirectoryIndex index.php index.html

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Serve existing files/directories as-is
  RewriteCond %{REQUEST_FILENAME} -d [OR]
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Optional: remove trailing slash for non-directories
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.+)/$ $1 [R=301,L]

  # Map extensionless paths to .php if such a file exists
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME}\.php -f
  RewriteRule ^(.+)$ $1.php [L,QSA]
</IfModule>
